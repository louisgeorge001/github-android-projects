<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context="com.example.george.phplogin.MainActivity">

    <EditText
        android:id="@+id/txtuname"
        android:layout_width="202dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtpass"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="137dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/bulogin"
        android:layout_alignEnd="@+id/bulogin" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="34dp"
        android:text="Username"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtuname"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp" />

    <EditText
        android:id="@+id/txtpass"
        android:layout_width="193dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintBottom_toTopOf="@+id/bulogin"
        android:layout_below="@+id/txtuname"
        android:layout_alignLeft="@+id/txtuname"
        android:layout_alignStart="@+id/txtuname"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/bulogin"
        android:layout_alignBaseline="@+id/txtpass"
        android:layout_alignBottom="@+id/txtpass"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/bulogin"
        android:layout_width="368dp"
        android:layout_height="54dp"
        android:text="Login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/buregister"
        android:layout_above="@+id/buregister"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/bulogin"
        android:layout_alignStart="@+id/bulogin" />

</RelativeLayout>
